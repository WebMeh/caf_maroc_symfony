						<th>BP</th>
						<th>BC</th>
						<th>Diff</th>
					</tr>
				</thead>
				<tbody>
					{% for team in teams %}
						<tr>
							<td>{{ loop.index }}</td>
							<td>{{ team.name }}</td>
							<td>
								<strong>{{ team.points }}</strong>
							</td>
							<td>{{ team.matchesPlayed }}</td>
							<td>{{ team.wins }}</td>
							<td>{{ team.draws }}</td>
							<td>{{ team.losses }}</td>
							<td>{{ team.goalsFor }}</td>
							<td>{{ team.goalsAgainst }}</td>
							<td>{{ team.goalsFor - team.goalsAgainst }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
