{% extends 'admin/admin_base.html.twig' %}

{% block title %}
	Classement CAN 2025
{% endblock %}

{% block content %}
<div class="card">

	<div class="card-header ">
		<div>
			üèÜClassement CAN 2025
		</div>
	</div>
	<div class="card-body">
			<table class="table table-striped text-center">
				<thead class="table-dark">
					<tr>
						<th>Position</th>
						<th>√âquipe</th>
						<th>Pts</th>
						<th>J</th>
						<th>V</th>
						<th>N</th>
