{% extends 'admin/admin_base.html.twig' %}

{% block title %}Gestion des Équipes | Admin
{% endblock %}

{% block content %}
	<div class="card">
		<div class="card-header bg-dark text-white">
			⚽ Gestion des Équipes
		</div>
		<div class="card-body">
			<a href="{{path('admin_team_new')}}" class="btn btn-success mb-3">➕ Ajouter une Équipe</a>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Pays</th>
						<th>Nmbre de Joueurs</th>
						<th>Classement FIFA</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for team in teams %}
						<tr>
							<td>
								<a href="{{ path('admin_teams_details', {id: team.id}) }}">{{team.name}}</a>
							</td>
							<td>{{team.country}}</td>
							{# Nombre de joueurs de l'équipe #}
							<td class="text-center">
								<span class="badge bg-primary">{{ team.players|length }}</span>
								<a href="{{ path('admin_player_new', { teamId: team.id }) }}" class="btn btn-sm btn-success ms-2">
									<i class="fas fa-plus"></i>
									Ajouter
								</a>
							</td>
							<td>{{team.ranking}}</td>
							<td>
								<a href="#" class="btn btn-warning btn-sm">✏️ Modifier</a>
								<a href="#" class="btn btn-danger btn-sm">🗑️ Supprimer</a>
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
