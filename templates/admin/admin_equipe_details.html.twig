{% extends 'admin/admin_base.html.twig' %}

{% block title %}Détails de l'Équipe | Admin
{% endblock %}

{% block content %}
	<div class="card">
		<div class="card-header bg-dark text-white">
			🇲🇦 Détails de l'Équipe : Maroc
		</div>
		<div class="card-body">
			<h4>🌍 Pays : Maroc</h4>
			<h5>📊 Classement FIFA : 13</h5>
			<h5>👥 Nombre de Joueurs : 24</h5>

			<a href="{{ path('admin_teams') }}" class="btn btn-primary my-3">⬅️ Retour aux Équipes</a>

			<hr>

			<h4>🏅 Liste des Joueurs</h4>
			<ul>
				{% for player in team.players %}
					<li>{{ player.name }}
						-
						{{ player.position }}
						-
						{{ player.club }}
						<a href="{{ path('admin_player_edit', {'id': player.id}) }}">Modifier</a>
						<a href="{{ path('admin_player_delete', {'id': player.id}) }}">Supprimer</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
