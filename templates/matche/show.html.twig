{% extends 'base.html.twig' %}

{% block title %}Matche{% endblock %}

{% block body %}
    <h1>Matche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matche.id }}</td>
            </tr>
            <tr>
                <th>Score1</th>
                <td>{{ matche.score1 }}</td>
            </tr>
            <tr>
                <th>Score2</th>
                <td>{{ matche.score2 }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ matche.date ? matche.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Stadium</th>
                <td>{{ matche.stadium }}</td>
            </tr>
            <tr>
                <th>Phase</th>
                <td>{{ matche.phase }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matche_index') }}">back to list</a>

    <a href="{{ path('admin_match_edit', {'id': matche.id}) }}">edit</a>

