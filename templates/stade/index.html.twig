{% extends 'base.html.twig' %}

{% block title %}Stade index{% endblock %}

{% block body %}
    <h1>Stade index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stade in stades %}
            <tr>
                <td>{{ stade.id }}</td>
                <td>{{ stade.nom }}</td>
                <td>{{ stade.ville }}</td>
                <td>{{ stade.capacite }}</td>
                <td>
                    <a href="{{ path('app_stade_show', {'id': stade.id}) }}">show</a>
                    <a href="{{ path('app_stade_edit', {'id': stade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stade_new') }}">Create new</a>
{% endblock %}
