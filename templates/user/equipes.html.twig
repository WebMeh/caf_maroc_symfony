{% extends 'base.html.twig' %}

{% block title %}Équipes - CAF 2025
{% endblock %}

{% block body %}
	<div class="text-center my-4">
		<h2 class="fw-bold text-center my-4">
			<span class="badge  fs-4 px-3 py-2" style="background-color: #006239">
				<img src="{{ asset('images/caf-logo.png') }}" alt="CAF 2025" style="height: 50px;">
				Les Équipes Participantes - CAN 2025
			</span>
		</h2>
	</div>

	<div class="row g-4">
		{% for equipe in equipes %}
			<div class="col-md-4">
				<a
					href="#" class="text-decoration-none">
					<!-- Card Bootstrap de chaque équipe  -->
					<div class="card team-card" data-color="red" style="cursor: pointer; border-color: #006239">
						<div class="card-body ">
							<div class="d-flex align-items-center justify-content-start">
								<img src="{{ asset('uploads/logos/' ~ equipe.logo)}}" class="team-logo" alt="{{ equipe.name }}" style="height: 100px; object-fit: contain;"/>
								<div>
									<h5 class="team-name ms-3 text-dark">
										<strong style="color: #006239">{{ equipe.name }}
											-
										</strong>
										{{ equipe.country}}
									</h5>
									<i class="text-light ms-3 p-1" style="background-color: #006239">FIFA:
										<strong>{{equipe.ranking}}</strong>
									</i>
								</div>
							</div>
							<div class="d-flex align-items-center justify-content-end">
								<a class="text-dark" style="font-weight: bold">Voir détails</a>
							</div>
						</div>
						<div class="card-footer" style="background-color: #006239"></div>
					</div>
				</a>
			</div>
		{% else %}
			<div class="col-12">
				<div class="alert alert-warning text-center" role="alert">
					Aucune équipe disponible pour le moment.
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
