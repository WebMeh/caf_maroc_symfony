{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center">Changer le mot de passe</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow-sm p-4">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.oldPassword) }}
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.oldPassword) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.newPassword) }}
                    {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.newPassword) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.confirmPassword) }}
                    {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.confirmPassword) }}
                </div>

                <button type="submit" class="btn btn-primary w-100">Mettre Ã  jour</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
