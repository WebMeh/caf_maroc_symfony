<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		<style>
			.navbar {
				background: linear-gradient(90deg, #006239, #167224);
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			.navbar-brand {
				font-size: 1.5rem;
				font-weight: bold;
				color: white !important;
			}
			.nav-link {
				font-size: 1.1rem;
				font-weight: 500;
			}
			.navbar-link-element {
				color: white;
			}
			.nav-link:hover {
				color: #000 !important;
			}
			.navbar-toggler {
				border: none;
			}
			.navbar-toggler-icon {
				color: white;
			}
			.btn-navbar-gradient {
				background: linear-gradient(45deg, #1e3c72, #2a5298);
				color: white;
				border: none;
				transition: background-color 0.3s ease;
			}

			/* Style de la carte de l'√©quipe */
			.team-card {
				transition: background-color 0.3s ease, box-shadow 0.3s ease;
				border: 1px solid #ddd;
				border-radius: 8px;
				overflow: hidden;
			}

			.team-logo {
				width: 100px;
				height: 100px;
				object-fit: contain;
				margin-right: ;
			}

			.team-name {
				font-size: 1.2rem;
				font-weight: bold;
			}

			.team-card:hover {
				box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
			}

			/* Couleur dynamique au survol */
			.team-card[data-color] {
				background-color: #fff; /* Couleur par d√©faut */
			}

			.team-card[data-color]:hover {
				background-color: var(--team-color);
			}

			/* Assignation dynamique de la couleur */
			.team-card[data-color] {}
		</style>

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="bg-white">
		<nav class="navbar navbar-expand-lg">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{url('home')}}">
					<img src="{{ asset('images/caf-logo.png') }}" alt="CAF 2025" style="height: 50px;">

					CAN Maroc 2025
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon">
						<i class="fas fa-bars"></i>
					</span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link navbar-link-element" href="{{url('home')}}">
								<i class="fas fa-home"></i>
								Accueil
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link navbar-link-element" href="{{url('user_show_teams')}}">
								<i class="fas fa-users"></i>
								√âquipes
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link navbar-link-element" href="{{path('all_matches')}}">
								<i class="fas fa-calendar-alt"></i>
								Matchs
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link navbar-link-element" href="{{path('user_stade_index')}}">
								<i class="fas fa-landmark"></i>
								Stades
							</a>
						</li>
						{% if app.user %}
							<li class="nav-item dropdown">
								<a class="nav-link navbar-link-element dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fas fa-user-circle"></i>
									{{ app.user.nom }}
								</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

									<li>
										<a class="dropdown-item" href="{{path('user_billets_liste')}}">
											<i class="fas fa-ticket-alt"></i>
											Mes Billets</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('user_change_password') }}">
											<i class="fas fa-key"></i>
											Changer mot de passe</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
											<i class="fas fa-sign-out-alt"></i>
											D√©connexion
										</a>
									</li>
								</ul>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link navbar-link-element" href="{{ path('app_login') }}">
									<i class="fas fa-sign-in-alt"></i>
									Connexion
								</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		{% for message in app.flashes('success') %}
			<div class="position-fixed top-50 start-50 translate-middle text-center">
				<div class="alert alert-success alert-dismissible fade show shadow-lg p-4 rounded" role="alert">
					<strong>üéâ Succ√®s !</strong>
					{{ message }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		{% endfor %}

		<div class="container mt-4"> {% block body %}{% endblock %}
			</div>
			{{ include("components/footer.html.twig") }}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
		</body>
	</html>
